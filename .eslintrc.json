{
  "root": true,
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error"
  },
  "ignorePatterns": ["dist/", "node_modules/", "*.js"],
  "overrides": [
    {
      "files": ["**/*.test.ts", "**/*.spec.ts", "**/tests/**/*.ts", "**/test/**/*.ts"],
      "env": {
        "browser": true,
        "node": true,
        "jest": true
      },
      "globals": {
        "window": "readonly",
        "document": "readonly",
        "PerformanceNavigationTiming": "readonly"
      },
      "rules": {
        "no-unused-vars": "off",
        "no-undef": "off"
      }
    }
  ]
}
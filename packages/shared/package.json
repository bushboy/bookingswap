    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1"
  },
  "devDependencies": {
    "@types/hapi__joi": "^17.1.15",
    "@types/node": "^20.4.2",
    "vitest": "^0.33.0"
  }

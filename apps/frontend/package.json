{
  "name": "@booking-swap/frontend",
  "version": "1.0.0",
  "description": "React frontend for booking swap platform",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:comprehensive": "tsx src/components/booking/__tests__/runComprehensiveTests.ts",
    "test:booking-swap": "vitest run src/components/booking/__tests__/ --reporter=verbose --coverage",
    "test:booking-swap:unit": "vitest run src/components/booking/__tests__/UnifiedBookingForm.comprehensive.test.tsx src/components/booking/__tests__/InlineProposalForm.comprehensive.test.tsx --reporter=verbose",
    "test:booking-swap:integration": "vitest run src/components/booking/__tests__/BookingSwapWorkflow.integration.test.tsx --reporter=verbose",
    "test:booking-swap:performance": "vitest run src/components/booking/__tests__/BookingListPerformance.test.tsx --reporter=verbose --testTimeout=120000",
    "test:booking-swap:accessibility": "vitest run src/components/booking/__tests__/BookingSwapAccessibility.test.tsx --reporter=verbose",
    "test:booking-swap:separated": "tsx src/components/booking/__tests__/runSeparatedTests.ts",
    "test:booking-swap:separated:verbose": "tsx src/components/booking/__tests__/runSeparatedTests.ts --verbose",
    "test:booking-edit-form:separated": "vitest run src/components/booking/__tests__/BookingEditForm.separated.test.tsx --reporter=verbose --coverage",
    "test:swap-specification-page": "vitest run src/pages/__tests__/BookingSwapSpecificationPage.test.tsx --reporter=verbose --coverage",
    "test:separation:integration": "vitest run src/__tests__/integration/BookingSwapSeparation.integration.test.tsx --reporter=verbose --coverage",
    "test:separation:error-handling": "vitest run src/__tests__/error-handling/BookingSwapSeparationErrors.test.tsx --reporter=verbose --coverage",
    "test:e2e:booking-swap": "playwright test tests/e2e/booking-swap-ui-simplification.spec.ts",
    "test:e2e:separation": "playwright test tests/e2e/booking-swap-separation.spec.ts",
    "test:security": "npm run test:security:xss && npm run test:security:csrf && npm run test:security:content",
    "test:security:xss": "vitest run tests/security/xss/",
    "test:security:csrf": "vitest run tests/security/csrf/",
    "test:security:content": "vitest run tests/security/content-security/",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:css-conflicts": "node ../../scripts/check-css-conflicts.js",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@booking-swap/shared": "file:../../packages/shared",
    "@hashgraph/hedera-wallet-connect": "^1.3.2",
    "@reduxjs/toolkit": "^1.9.5",
    "axios": "^1.4.0",
    "date-fns": "^2.30.0",
    "lucide-react": "^0.544.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.45.1",
    "react-query": "^3.39.3",
    "react-redux": "^8.1.1",
    "react-router-dom": "^6.14.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/coverage-v8": "^0.33.0",
    "@vitest/ui": "^3.2.4",
    "jest-axe": "^8.0.0",
    "jsdom": "^22.1.0",
    "tsx": "^4.7.0",
    "vite": "^4.4.5",
    "vitest": "^0.33.0"
  }
}

{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": [
    "eslint:recommended",
    "@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["@typescript-eslint", "rulesdir"],
  "rules": {
    "rulesdir/no-css-property-conflicts": "error"
  },
  "settings": {
    "rulesdir": "../../.eslint/rules",
    "import/resolver": {
      "typescript": {}
    }
  }
}

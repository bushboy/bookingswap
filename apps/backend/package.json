{
  "name": "@booking-swap/backend",
  "version": "1.0.0",
  "description": "Backend API server for booking swap platform",
  "main": "dist/index.js",
  "bin": {
    "hedera-diagnostics": "./bin/hedera-diagnostics"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "db:create": "tsx src/database/setup.ts create",
    "db:create-test": "tsx src/database/setup.ts create-test",
    "db:drop": "tsx src/database/setup.ts drop",
    "db:reset": "tsx src/database/setup.ts reset",
    "migrate": "tsx src/database/migrate.ts migrate",
    "migrate:rollback": "tsx src/database/migrate.ts rollback",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:hedera-integration": "vitest run --config vitest.hedera-integration.config.ts",
    "test:watch": "vitest --watch",
    "test:security": "npm run test:security:vulnerabilities && npm run test:security:auth && npm run test:security:validation",
    "test:security:vulnerabilities": "vitest run --config vitest.security.config.ts tests/security/vulnerabilities/",
    "test:security:auth": "vitest run --config vitest.security.config.ts tests/security/authentication/",
    "test:security:validation": "vitest run --config vitest.security.config.ts tests/security/validation/",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rimraf dist",
    "hedera-diagnostics": "tsx src/cli/hedera-diagnostics.ts",
    "hedera:report": "npm run hedera-diagnostics report",
    "hedera:verify": "npm run hedera-diagnostics verify-account",
    "hedera:test": "npm run hedera-diagnostics test full-suite",
    "hedera:health": "npm run hedera-diagnostics health-check",
    "hedera:test-integration": "node scripts/run-hedera-integration-tests.js",
    "hedera:test-validate": "node scripts/run-hedera-integration-tests.js validate",
    "hedera:diagnose": "npm run hedera-diagnostics",
    "hedera:test-suite": "npm run hedera-diagnostics test full-suite",
    "hedera:check-balance": "npm run hedera-diagnostics check-balance",
    "hedera:check-permissions": "npm run hedera-diagnostics verify-account",
    "hedera:check-metadata": "npm run hedera-diagnostics check-metadata-size",
    "test:auth-flow": "tsx src/debug/run-auth-flow-test.ts",
    "test:auth-flow:sample": "tsx src/debug/run-auth-flow-test.ts --sample",
    "test:auth-flow:validate": "tsx src/debug/validate-auth-flow.ts",
    "test:real-token-auth": "tsx src/debug/test-real-token-auth.ts",
    "demo:auth-flow-test": "tsx src/debug/demo-auth-flow-test.ts",
    "test:swaps-endpoint": "tsx src/debug/test-swaps-endpoint.ts",
    "cleanup:swaps": "tsx src/cli/swapDataCleanup.ts",
    "cleanup:swaps:validate": "tsx src/cli/swapDataCleanup.ts validate",
    "cleanup:swaps:quick": "tsx src/cli/swapDataCleanup.ts quick-check",
    "cleanup:swaps:dry-run": "tsx src/cli/swapDataCleanup.ts cleanup --dry-run",
    "cleanup:swaps:execute": "tsx src/cli/swapDataCleanup.ts cleanup --skip-confirmation"
  },
  "dependencies": {
    "@hashgraph/sdk": "^2.40.0",
    "@hapi/joi": "^17.1.1",
    "bcryptjs": "^2.4.3",
    "commander": "^11.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.1",
    "node-fetch": "^2.6.12",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.1",
    "pg-connection-string": "^2.6.2",
    "socket.io": "^4.7.2",
    "twilio": "^4.14.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.2",
    "@types/node-fetch": "^2.6.4",
    "@types/nodemailer": "^6.4.9",
    "@types/pg": "^8.10.2",
    "@types/pg-connection-string": "^2.0.0",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "supertest": "^6.3.3",
    "tsc-alias": "^1.8.7",
    "tsx": "^3.12.7",
    "vitest": "^0.33.0"
  }
}